<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_marginTop="5dp"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorQian"
    >

    <RelativeLayout
        android:id="@+id/item_index_item"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/listview_iv"

            android:text="电风扇"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shichangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"

            android:layout_marginTop="10dp"
            android:text="实际价格"

            android:textSize="15sp" />


        <EditText
            android:singleLine="true"
            android:hint="请输入实际价格"
            android:inputType="number"
            android:id="@+id/shijijiaText"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/shichangjia"

            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp"
            android:layout_toRightOf="@+id/shichangjia"
            android:background="@drawable/border_yuanjiaojuxing_blue"
            android:paddingLeft="5dp"
            android:text=""
             />

        <TextView
            android:id="@+id/chaigoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/shichangjia"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/shichangjia"
            android:layout_marginBottom="10dp"
            android:text="实际数量"
            android:textSize="15sp" />

        <EditText
            android:singleLine="true"
            android:hint="请输入实际数量"

            android:inputType="number"

            android:id="@+id/shijiCountText"
            android:layout_width="150dp"
            android:layout_height="30dp"

            android:layout_alignBottom="@+id/chaigoujia"
            android:layout_alignLeft="@+id/shichangjiaText"
            android:layout_alignStart="@+id/shijijiaText"
            android:background="@drawable/border_yuanjiaojuxing_blue"
            android:paddingLeft="5dp"
            android:text=""
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />









</LinearLayout>