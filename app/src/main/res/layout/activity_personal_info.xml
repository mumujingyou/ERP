<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ededed"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitle"
        >
        <LinearLayout
            android:id="@+id/personalInfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_btn"
                android:background="#0000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:drawableBottom="@null"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/personalInfo_save"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:text="用户名："
            android:textSize="20sp"
            android:checked="true"
            android:textColor="#b4b4b4"
            />
        <EditText
            android:focusableInTouchMode="true"

            android:id="@+id/personalInfo_userName"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:drawableBottom="@null"
            android:hint="请输入用户名"
            android:background="@null"
            android:textSize="20sp"
            android:textColor="#b5b5b5"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RadioButton
            android:layout_width="120dp"

            android:layout_height="50dp"
            android:text="性别："
            android:textSize="20sp"
            android:checked="true"
            android:textColor="#b4b4b4"
            />
       <Spinner
           android:gravity="left"
           android:id="@+id/personalInfo_sexSpinner"
           android:layout_marginRight="150dp"
           android:layout_width="140dp"
           android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:text="部门："
            android:textSize="20sp"
            android:checked="true"
            android:textColor="#b4b4b4"
            />
        <EditText
            android:focusableInTouchMode="true"


            android:id="@+id/personalInfo_partment"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:drawableBottom="@null"
            android:hint="请输入部门"
            android:background="@null"
            android:textSize="20sp"
            android:textColor="#b5b5b5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:text="手机号："
            android:textSize="20sp"
            android:checked="true"
            android:textColor="#b4b4b4"
            />
        <EditText
            android:focusableInTouchMode="true"

            android:id="@+id/personalInfo_phoneNumber"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:drawableBottom="@null"
            android:hint="请输入手机号"
            android:background="@null"
            android:textSize="20sp"
            android:textColor="#b5b5b5"
            android:inputType="phone"/>

    </LinearLayout>






</LinearLayout>