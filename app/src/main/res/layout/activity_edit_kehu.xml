<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/qianbg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorTitle"
            >
            <LinearLayout
                android:id="@+id/edit_kehu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/back_btn"
                    android:background="#0000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:drawableBottom="@null"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑客户"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/edit_kehu_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本信息"

            android:textSize="20dp"/>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="客户名称"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText

                android:layout_width="300dp"
                android:id="@+id/edit_kehu_kehumingcheng"
                android:layout_height="30dp"
                android:background="@color/colorWhite"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="联系人"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"

                android:id="@+id/edit_kehu_lianxiren"
                android:layout_height="30dp"
                android:background="@color/colorWhite"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="联系人电话"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"
                android:inputType="phone"
                android:id="@+id/edit_kehu_lianxirendianhua"
                android:background="@color/colorWhite"

                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="编号"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"

                android:id="@+id/edit_kehu_bianhao"
                android:background="@color/colorWhite"

                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="邮箱"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"
                android:background="@color/colorWhite"
                android:inputType="textEmailAddress"
                android:id="@+id/edit_kehu_youxiang"

                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="联系地址"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"

                android:id="@+id/edit_kehu_lianxidizhi"
                android:background="@color/colorWhite"

                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="本公司负责人"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"

                android:id="@+id/edit_kehu_fuzeren"
                android:layout_height="30dp"
                android:background="@color/colorWhite"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>

        <!--

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="期初欠款"
                android:textSize="20sp"
                android:textColor="#b4b4b4"
                />
            <EditText
                android:layout_width="300dp"
                android:background="@color/colorWhite"
                android:inputType="number"
                android:id="@+id/edit_kehu_qichuqiankuan"
                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="160dp"
                android:textSize="20sp"
                android:textColor="#9c9c9c"/>

        </RelativeLayout>  -->


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textSize="20sp"
            android:textColor="#949494"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/edit_kehu_remark"
            android:paddingLeft="20dp"
            android:gravity="top"
            android:text="无"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:textSize="20sp"
            />
    </LinearLayout>




    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/btn_delete"
        android:background="#ffffff"
        android:text="删除"
        android:textSize="25sp"
        android:textColor="#ff0000"/>



</RelativeLayout>