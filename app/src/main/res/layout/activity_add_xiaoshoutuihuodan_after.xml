<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/qianbg"


    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitle"
        >
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_btn"
                android:background="#0000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:drawableBottom="@null"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增销售退货单"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#ffffff"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="20dp"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="单号"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />
                <TextView

                    android:layout_width="300dp"
                    android:id="@+id/danhao"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>



            </RelativeLayout>


            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="20dp"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="客户"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />
                <TextView

                    android:layout_width="300dp"
                    android:id="@+id/kehu"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>



            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进货商品"
                android:paddingLeft="20dp"
                android:textSize="20sp"/>


            <RelativeLayout
                android:id="@+id/shangpin"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/circle"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选商品"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />

                <TextView
                    android:id="@+id/depotName"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/price"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认仓库"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />


                <TextView
                    android:layout_marginTop="10dp"

                    android:text="0.00"
                    android:layout_width="120dp"
                    android:id="@+id/price"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>

                <TextView
                    android:layout_marginLeft="180dp"

                    android:layout_below="@+id/price"
                    android:text="共2件"
                    android:layout_width="wrap_content"
                    android:id="@+id/count"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>


                <!--
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/backbtn_gry"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
                -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:drawableLeft="@mipmap/circle"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:text="经手人"
                    android:textColor="#b4b4b4"
                    android:textSize="20sp" />

                <EditText
                    android:hint="请输入"
                    android:paddingLeft="10dp"
                    android:id="@+id/leader"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/border_yuanjiaojuxing_border"
                    android:text=""
                    android:textColor="#9c9c9c"
                    android:textSize="20sp" />

            </RelativeLayout>


            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/circle"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="业务日期"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />
                <TextView
                    android:text="2019年6月6日"
                    android:layout_width="300dp"
                    android:id="@+id/date"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>



                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/backbtn_gry"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="20dp"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="其他费用"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />


                <EditText
                    android:inputType="number"
                    android:background="@drawable/border_yuanjiaojuxing_border"
                    android:hint="请输入"
                    android:layout_width="200dp"
                    android:id="@+id/otherCase"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>




            </RelativeLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/circle"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="总计"
                    android:textSize="20sp"
                    android:textColor="#b4b4b4"
                    />
                <TextView
                    android:text="2019年6月6日"
                    android:layout_width="300dp"
                    android:id="@+id/add_caigoudingdan_gongyingshang"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>

                <TextView
                    android:text="￥0.00"
                    android:layout_width="300dp"
                    android:id="@+id/sumAmount"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="180dp"
                    android:textSize="20sp"
                    android:textColor="#9c9c9c"/>




            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片附件"
                android:paddingLeft="20dp"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorWhite">
                <ImageButton
                    android:layout_centerVertical="true"
                    android:id="@+id/addImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="@drawable/border_line_while5"
                    android:src="@mipmap/increase"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注信息"
                android:paddingLeft="20dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/colorWhite"
                android:hint="请填写备注信息"
                android:paddingLeft="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/zhanghu"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <RelativeLayout

                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:drawableLeft="@mipmap/circle"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结算账户"
                            android:textSize="20sp"
                            android:textColor="#b4b4b4"
                            />

                        <TextView

                            android:id="@+id/jiesuanzhanghu"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="150dp"
                            android:background="@color/colorWhite"
                            android:text=""
                            android:textColor="#9c9c9c"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_marginRight="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/backbtn_gry"
                            android:layout_marginTop="5dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout

                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:drawableLeft="@mipmap/circle"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实退（元）"
                            android:textSize="20sp"
                            android:textColor="#b4b4b4"
                            />

                        <EditText
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:id="@+id/tuikuanAmount"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/border_yuanjiaojuxing_border"
                            android:layout_marginRight="30dp"
                            android:hint="请输入"
                            android:textColor="#9c9c9c"
                            android:textSize="20sp" />



                    </RelativeLayout>


                </LinearLayout>



                <Button
                    android:id="@+id/enter"
                    android:layout_marginTop="5dp"
                    android:text="确认"
                    android:textColor="@color/colorTitle"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/zhanghu"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorWhite"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>









</LinearLayout>