    <EditText

        android:paddingLeft="20dp"
        android:id="@+id/add_zhanghu_remarksText"
        android:hint="备注说明"
        android:gravity="top"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

</LinearLayout>