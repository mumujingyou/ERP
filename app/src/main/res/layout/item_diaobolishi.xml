<?xml version="1.0" encoding="utf-8"?>
<swipedelete.view.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    >


        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="3dp"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="5dp"
                android:id="@+id/busNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text="0asdfasdfasdfa"
                android:textSize="20sp" />

            <TextView
                android:gravity="center"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:id="@+id/listview_tvInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/busNo"
                android:text="出"
                android:textSize="17sp" />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/refundDepotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busNo"
                android:layout_toRightOf="@+id/listview_tvInfo"
                android:text="仓库1"
                android:textColor="#818181"
                android:textSize="17sp"/>

            <TextView
                android:gravity="center"
                android:background="#00ff00"
                android:textColor="#ffffff"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/listview_tvInfo"
                android:text="入"
                android:textSize="17sp"
                android:id="@+id/textView" />

            <TextView

                android:id="@+id/buyDepotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignLeft="@+id/refundDepotName"
                android:layout_alignStart="@+id/refundDepotName"
                android:text="仓库2"
                android:textColor="#818181"
                android:textSize="17sp" />

            <TextView
                android:textColor="#818181"
                android:singleLine="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView"
                android:text="电风扇"
                android:textSize="17sp"
                android:id="@+id/proName" />







        </RelativeLayout>






</swipedelete.view.SwipeMenuLayout>