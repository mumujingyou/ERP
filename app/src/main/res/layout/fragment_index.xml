<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ededed"
    >


    <RelativeLayout
        android:background="@color/colorTitle"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/xiaoshoueText"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日销售额（元）"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:inputType="textPassword"

            android:id="@+id/xiaoshoue"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/colorWhite"/>


        <Switch
            android:layout_marginTop="45dp"
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/xiaoshoueText"
            android:background="@drawable/open_close_eye_selctor"
            android:thumb="@null"
            android:track="@null" />


        <TextView
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/shishoue"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shishoue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="实收金（元）"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />



        <TextView
            android:inputType="textPassword"

            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/xiaoshoubishu"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/xiaoshoubishu"
            android:gravity="center"
            android:text="销售笔数"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>

    <ListView
        android:divider="#00ffffff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/listView">

    </ListView>

    <TextView
        android:id="@+id/addkuaijiegongneng"
        android:textSize="15sp"
        android:gravity="center"
        android:text="添加快捷功能"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"/>













</LinearLayout>










